{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types/jdecorator",
    "outDir": ".",
    "rootDir": "./src",
    "noImplicitAny": false,
    "target": "es5",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2017"
    ],
    "strictNullChecks": true,
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true
  }
}
